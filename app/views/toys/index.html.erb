<body>

<div class="showcontent">

<h1>Toys 
  <%= link_to 'Add New Toy', new_toy_path ,:class => "button" %>
</h1>



<form>
<input type='text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword Search' >
</form>

  <legend></legend>

<span class="glyphicon glyphicon-search"></span>

<% @toys.each do |toy| %>


  <div class="box">
      <div class="innerbox">
          <div class='<%= "landscape" if toy.notportrait? %>'>
            <%= link_to (image_tag (toy.photo.url)), toy %>
            </div>
        <div class="titleBox">
          <%= toy.name %>
        </div>
      </div>
  </div>


<%end%>

</body>

