

<section class="homehero">


<form>
          <legend>Search</legend>
          <div class='col-xs-4'>
            <input type='text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword' >
          </div>
</form>

<% @toys.each do |toy| %>




    
	<div class="box">
   		<div class="innerbox">
   				<div class='<%= "landscape" if toy.notportrait? %>'>
       			<%= link_to (image_tag (toy.photo.url)), toy %>
       			</div>
   			<div class="titleBox">
   				<%= toy.name%>
   			</div>
   		</div>
	</div>



<%end%>


<p class='pull-right'>
<button class="button"> <%= link_to 'Add New Toy', new_toy_path %></button>
</p>

</section>


